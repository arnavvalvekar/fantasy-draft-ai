{
  "manifest_version": 3,
  "name": "DraftBuilder AI",
  "version": "1.0",
  "description": "Fantasy Football Draft Assistant with Live Reactions",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://fantasy.espn.com/football/draft*",
        "https://sleeper.com/draft/*"
      ],
      "js": ["content.js"]
    }
  ]
} 